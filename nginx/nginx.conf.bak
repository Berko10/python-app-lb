events {
    worker_connections 1024;
}

http {
upstream app_backend {
    server app1:5000;
    server app2:5000;
    server app3:5000;
    server app4:5000;
    server app5:5000;
    server app6:5000;
    server app7:5000;
    server app8:5000;
    server app9:5000;
    server app10:5000;
}

    map $cookie_internal_ip $target_backend {
        # Default - will use upstream
        default "";
        # If cookie has a value, use it directly
        "~.+" $cookie_internal_ip;
    }

    server {
        listen 80;

        location / {
            if ($target_backend) {
                proxy_pass http://$target_backend:5000;
            }
            # Otherwise use the upstream
            if ($target_backend = "") {
                proxy_pass http://app_backend;
            }

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location /showcount {
            if ($target_backend) {
                proxy_pass http://$target_backend:5000;
            }
            # Otherwise use the upstream
            if ($target_backend = "") {
                proxy_pass http://app_backend;
            }

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}
