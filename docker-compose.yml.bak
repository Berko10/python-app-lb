version: '3'

services:
  nginx:
    image: nginx:latest
    container_name: nginx
    ports:
      - "80:80"
    depends_on:
      - app1
      - app2
      - app3
      - app4
      - app5
      - app6
      - app7
      - app8
      - app9
      - app10
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    networks:
      - app_network

  app-builder:
    build: ./app
    image: my-flask-app
    entrypoint: [ "echo", "image built" ]
    networks:
      - app_network

  app1:
    image: my-flask-app
    container_name: app1
    environment:
      - INSTANCE_ID=1
    depends_on:
      - db
    volumes:
      - ./logs/app1:/app/logs
    networks:
      - app_network

  app2:
    image: my-flask-app
    container_name: app2
    environment:
      - INSTANCE_ID=2
    depends_on:
      - db
    volumes:
      - ./logs/app2:/app/logs
    networks:
      - app_network

  app3:
    image: my-flask-app
    container_name: app3
    environment:
      - INSTANCE_ID=3
    depends_on:
      - db
    volumes:
      - ./logs/app3:/app/logs
    networks:
      - app_network

  app4:
    image: my-flask-app
    container_name: app4
    environment:
      - INSTANCE_ID=4
    depends_on:
      - db
    volumes:
      - ./logs/app4:/app/logs
    networks:
      - app_network

  app5:
    image: my-flask-app
    container_name: app5
    environment:
      - INSTANCE_ID=5
    depends_on:
      - db
    volumes:
      - ./logs/app5:/app/logs
    networks:
      - app_network

  app6:
    image: my-flask-app
    container_name: app6
    environment:
      - INSTANCE_ID=6
    depends_on:
      - db
    volumes:
      - ./logs/app6:/app/logs
    networks:
      - app_network

  app7:
    image: my-flask-app
    container_name: app7
    environment:
      - INSTANCE_ID=7
    depends_on:
      - db
    volumes:
      - ./logs/app7:/app/logs
    networks:
      - app_network

  app8:
    image: my-flask-app
    container_name: app8
    environment:
      - INSTANCE_ID=8
    depends_on:
      - db
    volumes:
      - ./logs/app8:/app/logs
    networks:
      - app_network

  app9:
    image: my-flask-app
    container_name: app9
    environment:
      - INSTANCE_ID=9
    depends_on:
      - db
    volumes:
      - ./logs/app9:/app/logs
    networks:
      - app_network

  app10:
    image: my-flask-app
    container_name: app10
    environment:
      - INSTANCE_ID=10
    depends_on:
      - db
    volumes:
      - ./logs/app10:/app/logs
    networks:
      - app_network

  db:
    image: mysql:latest
    container_name: db
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: app_db
    volumes:
      - ./mysql/db_data:/var/lib/mysql
      - ./logs/db_logs:/var/log/mysql
      - ./mysql/init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    networks:
      - app_network

networks:
  app_network:
    driver: bridge

volumes:
  db_data:
